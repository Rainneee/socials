<% if resource.errors.any? %>
  <div class="flash-error alert alert-error bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 fill-current mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" aria-labelledby="f1yx75u7nv0lvn6ck4z10w7lksjmk2f">
          <title id="f1yx75u7nv0lvn6ck4z10w7lksjmk2f">Error icon</title>
          <path fill-rule="evenodd" d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm1.41-1.41A8 8 0 1 0 15.66 4.34 8 8 0 0 0 4.34 15.66zm9.9-8.49L11.41 10l2.83 2.83-1.41 1.41L10 11.41l-2.83 2.83-1.41-1.41L8.59 10 5.76 7.17l1.41-1.41L10 8.59l2.83-2.83 1.41 1.41z"></path>
        </svg>
      </div>
      <div>
        <h4 class="font-bold text-sm uppercase tracking-wide">
          <%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
        </h4>
        <ul class="list-disc ml-6">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
