<section class="p-8 w-full h-full">
  <div class="grid grid-cols-1 md:grid-cols-4 sm:grid-cols-2 gap-10 h-full">
    <div class="col-span-1 md:col-span-2 sm:col-span-1 h-full flex items-end sm:justify-center sm:items-center">
      <div class="max-w-[47px] max-h-[57px] md:max-w-[300px] md:max-h-[300px] sm:max-w-[200px] sm:max-h-[200px]">
        <%= image_tag 'twitterol2.png', class: "w-full h-full object-contain" %>
      </div>
    </div>
    <div class="col-span-1 md:col-span-2 sm:col-span-1 w-full sm:my-auto">
      <h1 class="text-[64px] font-bold">Sign up</h1>
      <%= render "shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="p-0 lg:max-w-[70%] md:max-w-[85%]">
          <div class="mb-3 field">
            <%= f.label :name, "Name", class:"" %>
            <%= f.text_field :name, class:"w-full rounded-md focus:text-blue" %>
          </div>

          <div class="mb-3 field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded-md focus:text-blue" %>
          </div>

          <div class="mb-3 field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class:"w-full rounded-md focus:text-blue" %>
          </div>

          <div class="mb-3 action">
            <div class="mb-14">
              <%= f.submit "Create Account", class:"block w-full text-center text-white font-bold py-2 rounded-full bg-[#1d9bf0] cursor-pointer hover:bg-[#1A8CD8]" %>
            </div>

            <% if controller_name != 'sessions' %>
              <div>
                <h3 class="mb-1 font-semibold">Already have an account?</h3>
                <%= link_to "Sign in", new_session_path(resource_name), class:"block w-full text-center text-blue-500 font-bold py-2 rounded-full border border-gray-300 bg-transparent cursor-pointer hover:bg-blue-100" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
