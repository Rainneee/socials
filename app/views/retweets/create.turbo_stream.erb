<% if params[:source] == "twitter/show" %>
  <%= turbo_stream.replace "show_stats" do %>
    <%= render partial: 'tweets/show_actions', locals: {tweet: @tweet, source: "twitter/show" } %>
<% else %>
  <%= turbo_stream.replace dom_id(@tweet) do %>
    <%= render partial: 'tweets/tweets', locals: {tweet: @tweet} %>
  <% end %>
<% end %>