<section class="p-8 w-full h-full">
  <div class="grid grid-cols-1 md:grid-cols-4 sm:grid-cols-2 gap-10 h-full">
    <div class="col-span-1 md:col-span-2 sm:col-span-1 h-full flex items-end sm:justify-center sm:items-center">
      <div class="max-w-[47px] max-h-[57px] md:max-w-[300px] md:max-h-[300px] sm:max-w-[200px] sm:max-h-[200px]">
        <%= image_tag 'twitterol2.png', class: "w-full h-full object-contain" %>
      </div>
    </div>
    <div class="col-span-1 md:col-span-2 sm:col-span-1 w-full sm:my-auto">
      <h1 class="text-[64px] font-bold">Set up addtional details</h1>
      <%= render partial: "shared/error_messages", resource: resource %>
      <%= form_with model: resource, url: onboarding_path, local: true do |f| %>
        <div class="p-0 lg:max-w-[70%] md:max-w-[85%]">
          <div class="mb-3 field">
            <%= f.label :user_name %>
            <%= f.text_field :user_name, class:"w-full rounded-md focus:text-blue", required: true %>
          </div>
          <div class="mb-3 field">
            <%= f.label :birthdate %>
            <%= f.date_field :birthdate, class:"w-full rounded-md focus:text-blue" %>
          </div>
          <div class="mb-3 field">
            <%= f.label :bio %>
            <%= f.text_area :bio, class:"w-full min-h-[100px] rounded-md focus:text-blue", data: { controller: "autosize" } %>
          </div>
          <div class="mb-3 field">
            <%= f.label :avatar %>
            <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-accepted-files="image/*" data-dropzone-max-files="1" data-upload-multiple="false">
              <%= f.file_field :avatar, multiple: false, direct_upload: true, data: { dropzone_target: 'input' }, class: "input" %>
              <div class="dropzone-msg dz-message needsclick flex flex-col items-center justify-center">
                <p class="text-xs text-center mt-[10px] mb-4">
                <span class="text-xs text-center text-[#1d9bf0]">Click to upload</span>
                <span class="text-xs text-center text-[#637381]">or drag and drop</span>
                </p>
              </div>
            </div>
          </div>
          <div class="mb-3 action">
            <div class="mb-14">
              <%= f.submit "Update", class:"block w-full text-center text-white font-bold py-2 rounded-full bg-[#1d9bf0] cursor-pointer hover:bg-[#1A8CD8]" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
